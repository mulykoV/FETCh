<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FETCh</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FETCh.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Top Header with Pixel Style -->
    <header class="app-header">
        <h1 class="pixel-title">FETCh</h1>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom">
            <div class="container-fluid">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <!-- Main Layout: Sidebar + Content -->
    <div class="app-container">
        <!-- Sidebar with courses -->
        <aside class="sidebar">
            <h4>Курси</h4>
            <ul id="coursesList">
                <li><a href="#">Основи програмування</a></li>
                <li><a href="#">Алгоритми та структури</a></li>
                <li><a href="#">Бази даних</a></li>
                <!-- Адмін зможе додавати нові -->
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="content">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer text-center border-top">
        <div class="container">
            &copy; 2025 - FETCh
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
