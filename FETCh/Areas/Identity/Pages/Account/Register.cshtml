@page
@model RegisterModel
@{
    ViewData["Title"] = "Реєстрація";
}

<section class="hero-split">
    <!-- Ліва частина (біла) -->
    <div class="hero-half light-side scroll-animate">
        <h1 class="pixel-title">Приєднуйся до FIT:Community</h1>
        <p class="subtext">Майбутнє - це ти! <span class="highlight">Майбутнє - це FETCh</span>!</p>

        <canvas id="matrixRain"></canvas>


    </div>

    <!-- Права частина (чорна) -->
    <div class="hero-half dark-side scroll-animate right">
        <div class="register-card">
            <h1 class="pixel-title" style="font-size: 24px;">@ViewData["Title"]</h1>
            <p class="subtext">Створи акаунт та стань частиною гри </p>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-group">
                    <label for="Name">Ім’я користувача</label>
                    <input asp-for="Input.Name" class="form-input" aria-required="true" placeholder="Тут тицяєш свій нікнейм..." />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Email">Електронна пошта</label>
                    <input asp-for="Input.Email" class="form-input" aria-required="true" placeholder="Тут тицяєш свою пошту@gmail.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Password">Пароль</label>
                    <input asp-for="Input.Password" type="password" class="form-input" aria-required="true" placeholder="Тут тицяєш пароль..." />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="ConfirmPassword">Підтвердження пароля</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-input" aria-required="true" placeholder="Тут ще раз тицяєш пароль..." />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <input type="checkbox" id="isAdmin" />
                    <label for="isAdmin">Я адміністратор</label>
                </div>

                <div id="adminField" class="form-group" style="display:none;">
                    <label for="Secret">Секретна фраза</label>
                    <input type="text" id="Secret" name="Secret" class="form-input" />
                </div>

                <button id="registerSubmit" type="submit" class="btn-primary w-100">Зареєструватися</button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const checkbox = document.getElementById("isAdmin");
        const adminField = document.getElementById("adminField");
        checkbox.addEventListener("change", () => {
            adminField.style.display = checkbox.checked ? "block" : "none";
        });
    </script>
}
