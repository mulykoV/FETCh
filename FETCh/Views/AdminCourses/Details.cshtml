@model FETChModels.Models.Course

@{
    ViewData["Title"] = "Деталі курсу";
}

<h2 class="mt-3">📘 Деталі курсу</h2>

<div class="card shadow-sm mt-3 p-3">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded" />
            }
            else
            {
                <div class="bg-secondary text-white text-center p-5 rounded">Без зображення</div>
            }
        </div>

        <div class="col-md-8">
            <h3>@Model.Title</h3>
            @if (!string.IsNullOrEmpty(Model.Subtitle))
            {
                <h5 class="text-muted">@Model.Subtitle</h5>
            }

            <p class="mt-3"><strong>Мова:</strong> @Model.Language</p>
            <p><strong>Тривалість:</strong> @Model.DurationHours год.</p>
            <p><strong>Категорія:</strong> @Model.Category?.Name</p>

            <p>
                <strong>Ціна:</strong>
                @if (Model.IsFree)
                {
                    <span class="badge bg-success">Безкоштовно</span>
                }
                else
                {
                    <span>@Model.Price.ToString() @Model.PriceCurrency</span>
                }
            </p>

            <p class="mt-3 text-muted">@Model.Description</p>

            <h4>Записати користувача на курс</h4>
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form asp-action="EnrollUser" method="post">
                <input type="hidden" name="courseId" value="@Model.Id" />
                <select name="userId" class="form-select">
                    @foreach (var user in ViewBag.Users as List<ApplicationUser>)
                    {
                        <option value="@user.Id">@user.UserName (@user.Email)</option>
                    }
                </select>
                <button type="submit" class="btn btn-success mt-2">✅ Записати</button>
            </form>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏ Редагувати</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Видалити</a>
                <a asp-action="Index" class="btn btn-secondary">↩️ Назад</a>
            </div>
        </div>
    </div>
</div>

<!-- -------------------- МОДУЛІ КУРСУ -------------------- -->
<h4 class="mt-4 d-flex justify-content-between align-items-center">
    📚 Модулі курсу
    <a asp-action="Create" asp-controller="AdminModules" asp-route-courseId="@Model.Id" class="btn btn-success btn-sm">➕ Додати модуль</a>
</h4>

@if (Model.Modules != null && Model.Modules.Any())
{
    <ul class="list-group mt-3">
        @foreach (var module in Model.Modules)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@module.Title</strong>
                        <div class="text-muted">@module.Description</div>
                    </div>
                    <div>
                        <a asp-action="Details" asp-controller="AdminModules" asp-route-id="@module.Id" class="btn btn-primary btn-sm">Переглянути</a>
                        <a asp-action="Edit" asp-controller="AdminModules" asp-route-id="@module.Id" class="btn btn-warning btn-sm">✏ Редагувати</a>
                        <a asp-action="Delete" asp-controller="AdminModules" asp-route-id="@module.Id" class="btn btn-danger btn-sm">🗑 Видалити</a>
                    </div>
                </div>

                @if (module.Lectures != null && module.Lectures.Any())
                {
                    <ul class="mt-2">
                        @foreach (var lecture in module.Lectures)
                        {
                            <li>
                                🎓 <strong>@lecture.Title</strong>
                                @if (!string.IsNullOrEmpty(lecture.VideoUrl))
                                {
                                    <a asp-action="Details" asp-controller="AdminLectures" asp-route-id="@lecture.Id" class="ms-2">▶️ Відео/Контент</a>
                                }
                            </li>
                        }
                    </ul>
                }
            </li>
        }
    </ul>
}
else
{
    <div class="alert alert-info mt-3">
        Цей курс ще не містить жодного модуля або лекції.
    </div>
}
