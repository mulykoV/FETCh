@model FETCh.Models.ViewModels.CourseViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "РЕДАГУВАННЯ_КУРСУ";
}

<div class="cyber-container fade-in">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="glitch-text" data-text="ОНОВЛЕННЯ ДАНИХ">ОНОВЛЕННЯ ДАНИХ</h1>
            <p class="pixel-text text-muted">> МОДИФІКАЦІЯ ПРОТОКОЛУ [ID: @Model.Id]</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <form asp-action="Edit" method="post" class="cyber-form">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ContactEmail" />
                <input type="hidden" asp-for="ConfirmContactEmail" />

                <div asp-validation-summary="ModelOnly" class="terminal-alert mb-4"></div>

                <div class="cyber-card mb-4">
                    <h3 class="card-header-pixel">> ЗМІСТ_ПРОТОКОЛУ</h3>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Title" class="pixel-label">НАЗВА КУРСУ:</label>
                            <div class="input-wrapper">
                                <input asp-for="Title" class="cyber-input" />
                                <span class="input-border"></span>
                            </div>
                            <span asp-validation-for="Title" class="pixel-error"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Subtitle" class="pixel-label">ПІДЗАГОЛОВОК:</label>
                            <div class="input-wrapper">
                                <input asp-for="Subtitle" class="cyber-input" />
                                <span class="input-border"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="pixel-label">ОПИС ПРОГРАМИ:</label>
                        <div class="input-wrapper">
                            <textarea asp-for="Description" class="cyber-input" rows="4"></textarea>
                            <span class="input-border"></span>
                        </div>
                        <span asp-validation-for="Description" class="pixel-error"></span>
                    </div>
                </div>

                <div class="cyber-card mb-4">
                    <h3 class="card-header-pixel">> КОНФІГУРАЦІЯ</h3>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="Language" class="pixel-label">МОВА ВИКЛАДАННЯ:</label>
                            <div class="input-wrapper">
                                <input asp-for="Language" class="cyber-input" />
                                <span class="input-border"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="DurationHours" class="pixel-label">ТРИВАЛІСТЬ (ГОД):</label>
                            <div class="input-wrapper">
                                <input asp-for="DurationHours" type="number" class="cyber-input" />
                                <span class="input-border"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label class="pixel-label">КАТЕГОРІЯ:</label>
                            <div class="d-flex gap-2">
                                <div class="input-wrapper w-100">
                                    <select asp-for="CategoryId" class="cyber-input">
                                        <option value="">[ ОБЕРІТЬ КАТЕГОРІЮ ]</option>
                                        @foreach (var category in Model.Categories)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    </select>
                                    <span class="input-border"></span>
                                </div>
                                <a asp-controller="AdminCategories" asp-action="Create" class="btn-cyber w-auto d-flex align-items-center justify-content-center" title="Створити нову категорію">
                                    +
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3 align-items-end">
                        <div class="col-md-3">
                            <div class="cyber-checkbox-wrapper mb-3">
                                <input asp-for="IsFree" class="cyber-checkbox" id="IsFree" />
                                <label asp-for="IsFree" class="pixel-label checkbox-label" for="IsFree">БЕЗКОШТОВНИЙ ДОСТУП</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Price" class="pixel-label">ВАРТІСТЬ:</label>
                            <div class="input-wrapper">
                                <input asp-for="Price" type="number" step="0.01" class="cyber-input" id="Price" />
                                <span class="input-border"></span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="PriceCurrency" class="pixel-label">ВАЛЮТА:</label>
                            <div class="input-wrapper">
                                <input asp-for="PriceCurrency" class="cyber-input" id="PriceCurrency" />
                                <span class="input-border"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="cyber-card mb-4">
                    <h3 class="card-header-pixel">> ВІЗУАЛІЗАЦІЯ</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="ImageUrl" class="pixel-label">URL ЗОБРАЖЕННЯ:</label>
                            <div class="input-wrapper">
                                <input asp-for="ImageUrl" class="cyber-input" />
                                <span class="input-border"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="BannerImageUrl" class="pixel-label">URL БАНЕРА:</label>
                            <div class="input-wrapper">
                                <input asp-for="BannerImageUrl" class="cyber-input" />
                                <span class="input-border"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-5">
                    <a asp-action="Index" class="btn-cyber btn-danger-glow w-auto px-4">
                        < СКАСУВАТИ
                    </a>
                    <button type="submit" class="btn-cyber w-auto px-5">
                        [ ПЕРЕЗАПИСАТИ ДАНІ ]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            function togglePrice() {
                if ($('#IsFree').is(':checked')) {
                    $('#Price').val(0);
                    $('#Price').prop('readonly', true);
                    $('#Price').addClass('disabled-input');
                    $('#PriceCurrency').addClass('disabled-input');
                    $('#PriceCurrency').prop('readonly', true);
                } else {
                    $('#Price').prop('readonly', false);
                    $('#Price').removeClass('disabled-input');
                    $('#PriceCurrency').removeClass('disabled-input');
                    $('#PriceCurrency').prop('readonly', false);
                    // Якщо там 0, очищуємо, щоб зручно вводити нову ціну
                    if ($('#Price').val() == 0) {
                         $('#Price').val('');
                    }
                }
            }

            // Запускаємо при завантаженні (якщо ми редагуємо вже безкоштовний курс)
            togglePrice();

            $('#IsFree').change(function () {
                togglePrice();
            });
        });
    </script>
}