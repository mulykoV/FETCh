@model FETCh.Models.ViewModels.CourseViewModel

@{
    ViewData["Title"] = "Додати новий курс";
}

<h2 class="mt-3">➕ Додати новий курс</h2>

<form asp-action="Create" method="post" class="mt-4">

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Title" class="form-label">Назва курсу</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Subtitle" class="form-label">Підзаголовок</label>
            <input asp-for="Subtitle" class="form-control" />
            <span asp-validation-for="Subtitle" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Опис курсу</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="card mb-4 bg-light border-info">
        <div class="card-header text-info"><strong>📧 Контакти куратора</strong></div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="ContactEmail" class="form-label">Email куратора</label>
                    <input asp-for="ContactEmail" class="form-control" />
                    <span asp-validation-for="ContactEmail" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ConfirmContactEmail" class="form-label">Підтвердження Email</label>
                    <input asp-for="ConfirmContactEmail" class="form-control" />
                    <span asp-validation-for="ConfirmContactEmail" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="Language" class="form-label">Мова</label>
            <input asp-for="Language" class="form-control" />
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="DurationHours" class="form-label">Тривалість (годин)</label>
            <input asp-for="DurationHours" type="number" class="form-control" />
            <span asp-validation-for="DurationHours" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Категорія</label>
            <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                <option value="">-- Виберіть категорію --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <div class="form-check mt-4">
                <input asp-for="IsFree" class="form-check-input" />
                <label asp-for="IsFree" class="form-check-label">Безкоштовний</label>
            </div>
        </div>
        <div class="col-md-4">
            <label asp-for="Price" class="form-label">Ціна</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="PriceCurrency" class="form-label">Валюта</label>
            <input asp-for="PriceCurrency" class="form-control" />
            <span asp-validation-for="PriceCurrency" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="ImageUrl" class="form-label">Посилання на зображення</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="BannerImageUrl" class="form-label">Банер курсу</label>
            <input asp-for="BannerImageUrl" class="form-control" />
            <span asp-validation-for="BannerImageUrl" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-success">✅ Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary">↩️ Назад до списку</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            function togglePrice() {
                if ($('#IsFree').is(':checked')) {
                    $('#Price').val(0);
                    $('#Price').prop('readonly', true);
                    $('#Price').addClass('bg-light'); 
                } else {
                    $('#Price').prop('readonly', false);
                    $('#Price').removeClass('bg-light');
                    if ($('#Price').val() == 0) {
                         $('#Price').val(''); 
                    }
                }
            }

            togglePrice();

            $('#IsFree').change(function () {
                togglePrice();
            });
        });
    </script>
}
