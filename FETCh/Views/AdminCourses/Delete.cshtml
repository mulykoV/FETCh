@model FETChModels.Models.Course

@{
    ViewData["Title"] = "ВИДАЛЕННЯ_КУРСУ";
}

<div class="cyber-container fade-in">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="glitch-text text-danger" data-text="ВИДАЛЕННЯ ДАНИХ">ВИДАЛЕННЯ ДАНИХ</h1>
            <div class="terminal-alert danger-alert mt-3">
                <span class="blink">>>></span> УВАГА: ЦЯ ДІЯ Є НЕЗВОРОТНОЮ. ПІДТВЕРДІТЬ ЗНИЩЕННЯ. <span class="blink"><<<</span>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="cyber-card danger-border">
                <h3 class="card-header-pixel text-danger">> ЦІЛЬОВА СУТНІСТЬ (TARGET)</h3>

                <div class="row mt-4">
                    <div class="col-md-12 mb-4 text-center">
                        <span class="pixel-label text-danger">НАЗВА ПРОТОКОЛУ:</span>
                        <h2 class="text-white mt-2">@Model.Title</h2>
                    </div>
                </div>

                <div class="row cyber-stats">
                    <div class="col-md-6 mb-3">
                        <span class="pixel-label">МОВА:</span>
                        <span class="cyber-value">@Model.Language</span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <span class="pixel-label">КАТЕГОРІЯ:</span>
                        <span class="cyber-value">@(Model.Category?.Name ?? "N/A")</span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <span class="pixel-label">ВАРТІСТЬ:</span>
                        @if (Model.IsFree)
                        {
                            <span class="cyber-badge free">БЕЗКОШТОВНО</span>
                        }
                        else
                        {
                            <span class="cyber-badge paid">@Model.Price.ToString() @Model.PriceCurrency</span>
                        }
                    </div>
                    <div class="col-md-12 mb-3">
                        <span class="pixel-label">ОПИС:</span>
                        <p class="text-muted small mt-1">@Model.Description</p>
                    </div>
                </div>

                <form asp-action="DeleteConfirmed" method="post" class="mt-5">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn-cyber w-auto px-4">
                            < ВІДМІНИТИ
                        </a>

                        <button type="submit" class="btn-cyber btn-danger-glow w-auto px-4">
                            [ ☠️ ПІДТВЕРДИТИ ВИДАЛЕННЯ ]
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>