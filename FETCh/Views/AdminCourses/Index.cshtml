@model IEnumerable<FETChModels.Models.Course>

@{
    ViewData["Title"] = "Список курсів";
}

<h2 class="mt-3">📚 Список курсів</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">➕ Додати курс</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Наразі немає жодного курсу.
    </div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Назва</th>
                <th>Мова</th>
                <th>Ціна</th>
                <th>Безкоштовний</th>
                <th>Категорія</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Language</td>
                    <td>
                        @if (item.IsFree)
                        {
                            <span class="badge bg-success">Безкоштовно</span>
                        }
                        else
                        {
                            @item.Price.ToString() @item.PriceCurrency
                        }
                    </td>
                    <td>@(item.IsFree ? "Так" : "Ні")</td>
                    <td>@item.Category?.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Деталі</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
