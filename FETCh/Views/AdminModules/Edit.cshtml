@model FETChModels.Models.Module

@{
    ViewData["Title"] = "РЕДАГУВАННЯ_МОДУЛЯ";
}

<div class="cyber-container fade-in">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="glitch-text" data-text="РЕДАГУВАННЯ МОДУЛЯ">РЕДАГУВАННЯ МОДУЛЯ</h1>
            <p class="pixel-text text-muted">> МОДИФІКАЦІЯ СЕКТОРУ [ID: @Model.Id]</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <form asp-action="Edit" method="post" class="cyber-form">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CourseId" />

                <div asp-validation-summary="ModelOnly" class="terminal-alert mb-4"></div>

                <div class="cyber-card mb-4">
                    <h3 class="card-header-pixel">> КОНФІГУРАЦІЯ БЛОКУ</h3>

                    <div class="mb-4">
                        <label asp-for="Title" class="pixel-label">НАЗВА СЕКЦІЇ:</label>
                        <div class="input-wrapper">
                            <input asp-for="Title" class="cyber-input" />
                            <span class="input-border"></span>
                        </div>
                        <span asp-validation-for="Title" class="pixel-error"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="pixel-label">ОПИС ВМІСТУ:</label>
                        <div class="input-wrapper">
                            <textarea asp-for="Description" class="cyber-input" rows="6"></textarea>
                            <span class="input-border"></span>
                        </div>
                        <span asp-validation-for="Description" class="pixel-error"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Details" asp-controller="AdminCourses" asp-route-id="@Model.CourseId" class="btn-cyber btn-danger-glow w-auto px-4">
                        < СКАСУВАТИ
                    </a>

                    <button type="submit" class="btn-cyber w-auto px-4">
                        [ ПЕРЕЗАПИСАТИ ДАНІ ]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}