@model FETChModels.Models.Module

<h2>📚 Модуль: @Model.Title</h2>

<p><strong>Курс:</strong> @Model.Course.Title</p>
<p class="mt-3">@Model.Description</p>

<div class="mt-4 mb-3">
    <a asp-action="Edit" class="btn btn-warning">✏️ Редагувати модуль</a>
    <a asp-action="Delete" class="btn btn-danger">🗑 Видалити модуль</a>
    <a asp-action="Details" asp-controller="AdminCourses" asp-route-id="@Model.CourseId" class="btn btn-secondary">↩️ Назад до курсу</a>
</div>

<!-- Лекції модуля -->
<h4 class="mt-4 d-flex justify-content-between align-items-center">
    🎓 Лекції модуля
    <a asp-action="Create" asp-controller="AdminLectures" asp-route-moduleId="@Model.Id" class="btn btn-success btn-sm">➕ Додати лекцію</a>
</h4>

@if (Model.Lectures != null && Model.Lectures.Any())
{
    <ul class="list-group mt-3">
        @foreach (var lecture in Model.Lectures)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>@lecture.Title</strong>
                    @if (!string.IsNullOrEmpty(lecture.VideoUrl))
                    {
                        <a asp-action="Details" asp-controller="AdminLectures" asp-route-id="@lecture.Id" class="ms-2">▶️ Відео/Контент</a>
                    }
                </div>
                <div>
                    <a asp-action="Edit" asp-controller="AdminLectures" asp-route-id="@lecture.Id" class="btn btn-warning btn-sm">✏️ Редагувати</a>
                    <a asp-action="Delete" asp-controller="AdminLectures" asp-route-id="@lecture.Id" class="btn btn-danger btn-sm">🗑 Видалити</a>
                </div>
            </li>
        }
    </ul>
}
else
{
    <div class="alert alert-info mt-3">
        Цей модуль ще не містить жодної лекції.
    </div>
}
