@model IEnumerable<FETChModels.Models.UserCourse>

@{
    ViewData["Title"] = "Мої курси";
}

<h2 class="mt-3">🎓 Мої курси</h2>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">Ви ще не записані на жоден курс.</div>
}
else
{
    <div class="row mt-3">
        @foreach (var enrollment in Model)
        {
            var course = enrollment.Course;
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    @if (!string.IsNullOrEmpty(course.ImageUrl))
                    {
                        <img src="@course.ImageUrl" class="card-img-top" alt="@course.Title" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="text-muted">@course.Subtitle</p>
                        <p>
                            <strong>Прогрес:</strong>
                            @(enrollment.IsCompleted ? "Завершено" : "У процесі")
                        </p>

                        @* -------------------- Відображення модулів -------------------- *@
                        @if (course.Modules != null && course.Modules.Any())
                        {
                            <h6 class="mt-2">Модулі:</h6>
                            <ul class="list-group list-group-flush">
                                @foreach (var module in course.Modules)
                                {
                                    <li class="list-group-item p-1">
                                        <a asp-action="Details" asp-controller="UserModules" asp-route-id="@module.Id" class="text-decoration-none">
                                            📘 @module.Title
                                        </a>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <small class="text-muted">Модулів ще немає.</small>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
