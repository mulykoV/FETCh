@model FETChModels.Models.Course

@{
    ViewData["Title"] = "ОГЛЯД_КУРСУ";
}

<div class="cyber-container fade-in">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="glitch-text" data-text="ТЕХНІЧНІ ДАНІ">ТЕХНІЧНІ ДАНІ</h1>
            <p class="pixel-text text-muted">> ПЕРЕГЛЯД СПЕЦИФІКАЦІЇ [ID: @Model.Id.ToString()]</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="cyber-card mb-5">
                <div class="row g-4">
                    <div class="col-md-5">
                        <div class="course-image-wrapper h-100">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Title" class="cyber-img" />
                                <div class="scan-line"></div>
                            }
                            else
                            {
                                <div class="no-image-placeholder">
                                    <span class="blink">NO_VISUAL_DATA</span>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-md-7">
                        <h2 class="card-header-pixel text-neon">@Model.Title</h2>
                        @if (!string.IsNullOrEmpty(Model.Subtitle))
                        {
                            <p class="pixel-text text-muted mb-4">> @Model.Subtitle</p>
                        }

                        <div class="cyber-description mb-4">
                            @Model.Description
                        </div>

                        <div class="row cyber-stats">
                            <div class="col-6 mb-2">
                                <span class="pixel-label">МОВА:</span>
                                <span class="cyber-value">@Model.Language</span>
                            </div>
                            <div class="col-6 mb-2">
                                <span class="pixel-label">ТРИВАЛІСТЬ:</span>
                                <span class="cyber-value">@Model.DurationHours ГОД.</span>
                            </div>
                            <div class="col-6 mb-2">
                                <span class="pixel-label">КАТЕГОРІЯ:</span>
                                <span class="cyber-value">@(Model.Category?.Name ?? "ЗАГАЛЬНЕ")</span>
                            </div>
                            <div class="col-6 mb-2">
                                <span class="pixel-label">ДОСТУП:</span>
                                @if (Model.IsFree)
                                {
                                    <span class="cyber-badge free">OPEN_SOURCE</span>
                                }
                                else
                                {
                                    <span class="cyber-badge paid">@Model.Price.ToString() @Model.PriceCurrency</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="cyber-card mb-4">
                <h3 class="card-header-pixel">> ЗМІСТ_ПАКЕТУ (МОДУЛІ)</h3>

                @if (Model.Modules != null && Model.Modules.Any())
                {
                    <div class="cyber-tree mt-3">
                        @foreach (var module in Model.Modules)
                        {
                            <div class="cyber-module-item">
                                <div class="module-header p-2" style="background: transparent; border: none;">
                                    <div class="d-flex align-items-start">
                                        <span class="folder-icon text-muted">📂</span>
                                        <div class="ms-2">
                                            <strong class="text-white">@module.Title</strong>
                                            <p class="text-muted small mb-0">@module.Description</p>
                                        </div>
                                    </div>
                                </div>

                                @if (module.Lectures != null && module.Lectures.Any())
                                {
                                    <div class="lectures-list mt-1">
                                        @foreach (var lecture in module.Lectures)
                                        {
                                            <div class="lecture-item py-1">
                                                <span class="file-icon text-muted">📄</span>
                                                <span class="text-muted">@lecture.Title</span>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="terminal-alert">
                        > ДАНІ В ПРОЦЕСІ ЗАВАНТАЖЕННЯ. МОДУЛІ ЩЕ НЕ СФОРМОВАНІ.
                    </div>
                }
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn-cyber w-auto px-4">
                    < ПОВЕРНУТИСЯ ДО АРХІВУ
                </a>

                @if (ViewBag.IsCompleted == true)
                {
                    @* СТАН 1: Курс вже пройдено *@
                    <button class="btn-cyber w-auto px-4 disabled" style="cursor: default; border-color: #00ff41; color: #00ff41;">
                        [ ✓ СТАТУС: МІСІЯ ЗАВЕРШЕНА ]
                    </button>
                }
                else if (ViewBag.IsEnrolled == true)
                {
                    @* СТАН 2: Записаний, але не пройшов -> Кнопка завершення *@
                    <form asp-action="CompleteCourse" asp-controller="UserCourses" method="post">
                        <input type="hidden" name="courseId" value="@Model.Id" />
                        <button type="submit" class="btn-cyber w-auto px-4 text-warning" style="border-color: #ffc107;">
                            [ >_ ПІДТВЕРДИТИ ЗАВЕРШЕННЯ ]
                        </button>
                    </form>
                }
                else
                {
                    @* СТАН 3: Не записаний -> Кнопка запису *@
                    <form asp-action="Enroll" asp-controller="UserCourses" method="post">
                        <input type="hidden" name="courseId" value="@Model.Id" />
                        <button type="submit" class="btn-cyber w-auto px-4">
                            [ + ЗАПИСАТИСЯ НА КУРС ]
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>