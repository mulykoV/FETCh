@model IEnumerable<FETChModels.Models.Course>

@{
    ViewData["Title"] = "Доступні курси";
}

<h2 class="mt-3">📚 Усі доступні курси</h2>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">Поки що немає доступних курсів.</div>
}
else
{
    <div class="row mt-3">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(course.ImageUrl))
                    {
                        <img src="@course.ImageUrl" class="card-img-top" alt="@course.Title" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="text-muted">@course.Subtitle</p>
                        <p>
                            @if (course.IsFree)
                            {
                                <span class="badge bg-success">Безкоштовно</span>
                            }
                            else
                            {
                                <strong>@course.Price.ToString() @course.PriceCurrency</strong>
                            }
                        </p>
                        <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary w-100">Переглянути</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
