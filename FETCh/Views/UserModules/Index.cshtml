@model IEnumerable<FETChModels.Models.Module>

@{
    ViewData["Title"] = "Модулі курсу: " + ViewBag.CourseTitle;
}

<h2 class="mt-3">Модулі курсу: @ViewBag.CourseTitle</h2>

@if (!Model.Any())
{
    <p>Модулі відсутні.</p>
}
else
{
    <ul class="list-group mt-3">
        @foreach (var module in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @module.Title
                <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@module.Id">
                    Переглянути
                </a>
            </li>
        }
    </ul>
}
