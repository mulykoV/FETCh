@model FETChModels.Models.Module

@{
    ViewData["Title"] = "Модуль: " + Model.Title;
}

<h2 class="mt-3">Модуль: @Model.Title</h2>
<p>@Model.Description</p>

<h4 class="mt-4">Лекції:</h4>

@if (Model.Lectures.Any())
{
    <ul class="list-group">
        @foreach (var lecture in Model.Lectures)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @lecture.Title
                <a class="btn btn-outline-primary btn-sm" asp-controller="UserLectures" asp-action="Details" asp-route-id="@lecture.Id">
                    Переглянути лекцію
                </a>
            </li>
        }
    </ul>
}
else
{
    <p>Лекції відсутні.</p>
}
