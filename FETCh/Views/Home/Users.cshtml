@model IEnumerable<FETChModels.Models.ApplicationUser>

@{
    ViewData["Title"] = "БАЗА_КОРИСТУВАЧІВ";
}

<div class="cyber-container fade-in">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="glitch-text" data-text="РЕЄСТР АГЕНТІВ">РЕЄСТР АГЕНТІВ</h1>
            <p class="pixel-text text-muted">> ГЛОБАЛЬНА БАЗА ДАНИХ КОРИСТУВАЧІВ СИСТЕМИ</p>
        </div>
    </div>

    <div class="cyber-card mb-4 p-3 d-flex justify-content-between align-items-center">
        <div>
            <span class="pixel-label">СТАТУС СИСТЕМИ:</span>
            <span class="text-neon">ОНЛАЙН</span>
        </div>
        <div>
            <span class="pixel-label">ВСЬОГО ЗАПИСІВ:</span>
            <span class="cyber-value">@Model.Count()</span>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="terminal-alert">
            <span class="blink">></span> БАЗА ДАНИХ ПОРОЖНЯ. КОРИСТУВАЧІВ НЕ ЗНАЙДЕНО.
        </div>
    }
    else
    {
        <div class="cyber-table-wrapper">
            <table class="cyber-table">
                <thead>
                    <tr>
                        <th>ІДЕНТИФІКАТОР (EMAIL)</th>
                        <th>ПОЗИВНИЙ (USERNAME)</th>
                        <th>ПОВНЕ ІМ'Я</th>
                        <th>КАНАЛ ЗВ'ЯЗКУ</th>
                        <th class="text-end">СТАТУС</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <span class="text-white">@user.Email</span>
                            </td>
                            <td>
                                <span class="text-neon">@user.UserName</span>
                            </td>
                            <td>
                                @(string.IsNullOrEmpty(user.Name) ? "НЕВІДОМИЙ" : user.Name)
                            </td>
                            <td class="text-muted font-monospace">
                                @(string.IsNullOrEmpty(user.PhoneNumber) ? "[ N/A ]" : user.PhoneNumber)
                            </td>
                            <td class="text-end">
                                <span class="cyber-badge free">АКТИВНИЙ</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="console-line mt-3">
            <span class="text-muted">end of list. awaiting command...</span><span class="cursor">_</span>
        </div>
    }
</div>