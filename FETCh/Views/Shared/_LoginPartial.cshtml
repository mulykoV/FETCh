@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav gap-3">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link nav-link-custom" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Привіт, @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link nav-link-custom btn btn-link p-0">Вийти</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link nav-link-custom" asp-area="Identity" asp-page="/Account/Register">Зареєструватися</a>
        </li>
        <li class="nav-item">
            <a class="nav-link nav-link-custom" asp-area="Identity" asp-page="/Account/Login">Залогінитися</a>
        </li>
    }
</ul>
