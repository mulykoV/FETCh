<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FETCh</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;900&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FETCh.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar -->
    <header class="navbar-wrapper">
        <nav class="navbar navbar-expand-sm fixed-top custom-navbar shadow-lg">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand pixel-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    FETCh
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarContent" aria-controls="navbarContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="navbarContent" class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav gap-3">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    ⚙️ Адмін
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminMenu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="AdminCourses" asp-action="Index">
                                            📚 Керування курсами
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="AdminCourses" asp-action="Create">
                                            ➕ Додати курс
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-area="" asp-controller="Home" asp-action="Index">Додому</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-area="" asp-controller="Home" asp-action="Privacy">Конфіденційність</a>
                        </li>
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="UserCourses" asp-action="Index">Курси</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="UserCourses" asp-action="MyCourses">Мої курси</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main -->
    <main role="main" class="main-wrapper">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="custom-footer text-center">
        <p>© 2025 — <span class="pixel-brand">FETCh</span>. Designed in Black & White.</p>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
