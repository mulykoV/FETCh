@model FETChModels.Models.Lecture

@{
    ViewData["Title"] = "Лекція: " + Model.Title;
}

<h2 class="mt-3">@Model.Title</h2>

@if (!string.IsNullOrEmpty(Model.VideoUrl))
{
    <div class="ratio ratio-16x9 mb-3">
        <iframe src="@Model.VideoUrl" allowfullscreen></iframe>
    </div>
}

<p>@Html.Raw(Model.Content)</p>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Message"]</div>
}

<form asp-action="MarkAsWatched" method="post" class="mt-3">
    <input type="hidden" name="lectureId" value="@Model.Id" />
    <button type="submit" class="btn btn-success">✅ Позначити як переглянуту</button>
</form>

<a asp-action="Details" asp-controller="UserModules" asp-route-id="@Model.ModuleId" class="btn btn-secondary mt-3">⬅ Назад до модуля</a>
