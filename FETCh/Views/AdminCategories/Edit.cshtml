@model FETChModels.Models.CourseCategory

@{
    ViewData["Title"] = "Редагувати категорію";
}

<h2 class="mt-3">✏️ Редагувати категорію</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Назва категорії</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">✅ Зберегти зміни</button>
        <a asp-action="Index" class="btn btn-secondary">↩️ Назад</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
