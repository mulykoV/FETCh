@model FETChModels.Models.CourseCategory

@{
    ViewData["Title"] = "Додати категорію";
}

<h2 class="mt-3">➕ Додати нову категорію</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Назва категорії</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">Зберегти</button>
        <a asp-action="Index" class="btn btn-secondary">↩️ Назад</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
