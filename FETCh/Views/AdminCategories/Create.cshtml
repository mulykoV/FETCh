@model FETChModels.Models.CourseCategory

@{
    ViewData["Title"] = "СТВОРЕННЯ_КАТЕГОРІЇ";
}

<div class="cyber-container fade-in">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="glitch-text" data-text="НОВА КАТЕГОРІЯ">НОВА КАТЕГОРІЯ</h1>
            <p class="pixel-text text-muted">> ДОДАВАННЯ СИСТЕМНОГО РОЗДІЛУ</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Create" method="post" class="cyber-form">

                <div asp-validation-summary="ModelOnly" class="terminal-alert mb-4"></div>

                <div class="cyber-card mb-4">
                    <h3 class="card-header-pixel">> ПАРАМЕТРИ_КАТЕГОРІЇ</h3>

                    <div class="mb-3">
                        <label asp-for="Name" class="pixel-label">ІДЕНТИФІКАТОР (НАЗВА):</label>
                        <div class="input-wrapper">
                            <input asp-for="Name" class="cyber-input" placeholder="Введіть назву розділу..." />
                            <span class="input-border"></span>
                        </div>
                        <span asp-validation-for="Name" class="pixel-error"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn-cyber btn-danger-glow w-auto px-4">
                        < СКАСУВАТИ
                    </a>
                    <button type="submit" class="btn-cyber w-auto px-4">
                        [ ЗБЕРЕГТИ ЗАПИС ]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}