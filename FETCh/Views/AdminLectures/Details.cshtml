@model FETChModels.Models.Lecture

@{
    ViewData["Title"] = "ПЕРЕГЛЯД_ЛЕКЦІЇ";
}

<div class="cyber-container fade-in">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="glitch-text" data-text="ПОТІК ДАНИХ">ПОТІК ДАНИХ</h1>
            <p class="pixel-text text-muted">> ID ФАЙЛУ: @Model.Id.ToString().ToUpper()</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="cyber-card mb-4 p-0 overflow-hidden video-terminal">
                <div class="terminal-header d-flex justify-content-between px-3 py-2">
                    <span class="text-neon blink">● LIVE_FEED</span>
                    <span class="text-muted">RES: 1080p // 60FPS</span>
                </div>

                <div class="video-wrapper">
                    @if (!string.IsNullOrEmpty(Model.VideoUrl))
                    {
                        <video controls class="w-100 cyber-video">
                            <source src="@Model.VideoUrl" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                        <div class="video-overlay-grid"></div>
                    }
                    else
                    {
                        <div class="no-signal-box">
                            <h2 class="glitch-text" data-text="NO SIGNAL">NO SIGNAL</h2>
                            <p class="pixel-text mt-2">> ВІДЕОПОТІК НЕ ВИЯВЛЕНО</p>
                        </div>
                    }
                </div>
            </div>

            <div class="cyber-card mb-4">
                <h3 class="card-header-pixel">> ВЛАСТИВОСТІ ОБ'ЄКТА</h3>

                <div class="row cyber-stats">
                    <div class="col-md-12 mb-3">
                        <span class="pixel-label">ТЕМА:</span>
                        <h2 class="text-neon mt-1">@Model.Title</h2>
                    </div>

                    <div class="col-md-4 mb-3">
                        <span class="pixel-label">БАТЬКІВСЬКИЙ МОДУЛЬ:</span>
                        <span class="cyber-value d-block">@Model.Module.Title</span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <span class="pixel-label">КОРЕНЕВИЙ КУРС:</span>
                        <span class="cyber-value d-block">@Model.Module.Course.Title</span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <span class="pixel-label">ТРИВАЛІСТЬ:</span>
                        <span class="cyber-value d-block">
                            @(Model.Duration.HasValue ? Model.Duration.Value.ToString(@"hh\:mm\:ss") : "N/A")
                        </span>
                    </div>
                </div>
            </div>

            <div class="cyber-card mb-5">
                <h3 class="card-header-pixel">> ТЕКСТОВА РОЗШИФРОВКА</h3>
                <div class="cyber-content-log">
                    @Html.Raw(Model.Content)
                </div>
                <div class="console-line mt-3">
                    <span class="text-muted">end of file.</span><span class="cursor">_</span>
                </div>
            </div>

            <div class="d-flex justify-content-between flex-wrap gap-2">
                <a asp-action="Details" asp-controller="AdminModules" asp-route-id="@Model.ModuleId" class="btn-cyber w-auto px-4">
                    < ПОВЕРНУТИСЯ ДО МОДУЛЯ
                </a>

                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-cyber warning-glow w-auto px-4">
                        [ РЕДАГУВАТИ ]
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn-cyber danger-glow w-auto px-4">
                        [ ВИДАЛИТИ ]
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>