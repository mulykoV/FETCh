@model FETChModels.Models.Lecture

@{
    ViewData["Title"] = "СТВОРЕННЯ_ЛЕКЦІЇ";
}

<div class="cyber-container fade-in">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="glitch-text" data-text="НОВА ЛЕКЦІЯ">НОВА ЛЕКЦІЯ</h1>
            <p class="pixel-text text-muted">> ІНІЦІАЛІЗАЦІЯ ПОТОКУ ДАНИХ [MODULE_ID: @Model.ModuleId]</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form asp-action="Create" method="post" class="cyber-form">
                <input type="hidden" asp-for="ModuleId" />

                <div asp-validation-summary="ModelOnly" class="terminal-alert mb-4"></div>

                <div class="cyber-card mb-4">
                    <h3 class="card-header-pixel">> ПАРАМЕТРИ КОНТЕНТУ</h3>

                    <div class="mb-4">
                        <label asp-for="Title" class="pixel-label">ТЕМА ЛЕКЦІЇ:</label>
                        <div class="input-wrapper">
                            <input asp-for="Title" class="cyber-input" placeholder="Введіть заголовок..." />
                            <span class="input-border"></span>
                        </div>
                        <span asp-validation-for="Title" class="pixel-error"></span>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-8">
                            <label asp-for="VideoUrl" class="pixel-label">ДЖЕРЕЛО ВІДЕО (URL):</label>
                            <div class="input-wrapper">
                                <input asp-for="VideoUrl" class="cyber-input" placeholder="https://youtube.com/..." />
                                <span class="input-border"></span>
                            </div>
                            <span asp-validation-for="VideoUrl" class="pixel-error"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Duration" class="pixel-label">ТРИВАЛІСТЬ:</label>
                            <div class="input-wrapper">
                                <input asp-for="Duration" type="time" step="1" class="cyber-input" />
                                <span class="input-border"></span>
                            </div>
                            <span asp-validation-for="Duration" class="pixel-error"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="pixel-label">ТЕКСТОВИЙ МАТЕРІАЛ:</label>
                        <div class="input-wrapper">
                            <textarea asp-for="Content" class="cyber-input" rows="6" placeholder="Введіть конспект лекції або додаткові матеріали..."></textarea>
                            <span class="input-border"></span>
                        </div>
                        <span asp-validation-for="Content" class="pixel-error"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Details" asp-controller="AdminModules" asp-route-id="@Model.ModuleId" class="btn-cyber btn-danger-glow w-auto px-4">
                        < СКАСУВАТИ
                    </a>
                    <button type="submit" class="btn-cyber w-auto px-4">
                        [ ЗАВАНТАЖИТИ ЛЕКЦІЮ ]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}