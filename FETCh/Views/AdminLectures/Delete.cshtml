@model FETChModels.Models.Lecture

@{
    ViewData["Title"] = "ВИДАЛЕННЯ_ЛЕКЦІЇ";
}

<div class="cyber-container fade-in">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="glitch-text text-danger" data-text="ВИДАЛЕННЯ ПОТОКУ">ВИДАЛЕННЯ ПОТОКУ</h1>
            <div class="terminal-alert danger-alert mt-3">
                <span class="blink">>>></span> ПОПЕРЕДЖЕННЯ: ВИДАЛЕННЯ ЛЕКЦІЇ Є НЕЗВОРОТНИМ. <span class="blink"><<<</span>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="cyber-card danger-border">
                <h3 class="card-header-pixel text-danger">> ЦІЛЬОВИЙ ФАЙЛ [LECTURE]</h3>

                <div class="p-3">
                    <div class="mb-4">
                        <span class="pixel-label text-danger">ТЕМА ЛЕКЦІЇ:</span>
                        <h2 class="text-white mt-1">@Model.Title</h2>
                    </div>

                    <div class="cyber-description" style="border-color: #ff3333;">
                        <div class="row">
                            <div class="col-6">
                                <span class="text-muted small">ID ЛЕКЦІЇ:</span><br>
                                <span class="text-white">@Model.Id</span>
                            </div>
                            <div class="col-6">
                                <span class="text-muted small">ТРИВАЛІСТЬ:</span><br>
                                <span class="text-white">@(Model.Duration.HasValue ? Model.Duration.Value.ToString() : "N/A")</span>
                            </div>
                        </div>
                        <div class="mt-3">
                            <span class="text-muted small">СТАТУС ВІДЕО:</span><br>
                            @if (!string.IsNullOrEmpty(Model.VideoUrl))
                            {
                                <span class="text-neon">ПІДКЛЮЧЕНО</span>
                            }
                            else
                            {
                                <span class="text-muted">ВІДСУТНЄ</span>
                            }
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Details" asp-controller="AdminModules" asp-route-id="@Model.ModuleId" class="btn-cyber w-auto px-4">
                            < ВІДМІНИТИ
                        </a>

                        <button type="submit" class="btn-cyber btn-danger-glow w-auto px-4">
                            [ 🗑️ СТЕРТИ ДАНІ ]
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>